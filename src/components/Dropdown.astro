---
const tiposProductos = ["Frutos Secos", "Frutas Deshidratadas", "Dulces", "Condimentos y Especias", "Hierbas y Tes", "Otros"];
const link = "hover:cursor-pointer mr-9 px-3 rounded-lg";

---

  <div class="dropdown dropdown-left ">
    <div tabindex="0" role="button" class={` text-gray-400 font-normal  hover:text-yellow-600 hover:bg-slate-200 border-none shadow-none ${link} w-full ml-6 justify-end inline-flex `}>Productos</div>
    <ul tabindex="0" class="dropdown-content z-[1] menu p-1 shadow bg-base-100 rounded-box w-50 mr-2 space-y-2">
        {tiposProductos.map((producto) => (
            <li>
              <a href={`/${producto}`} class="text-gray-400 hover:bg-slate-200 hover:text-yellow-600 px-3 py-3 rounded-lg">{producto}</a>
            </li>
          ))}
    </ul>
  </div>