---
const tiposProductos = ["Frutos Secos", "Frutas Deshidratadas", "Dulces", "Condimentos y Especias", "Hierbas y Tes", "Otros"];
const link = "hover:cursor-pointer mr-10 px-3 rounded-lg";

---

  <div class="dropdown dropdown-right m-0 pl-1">
    <div tabindex="0" role="button" class={` text-gray-400 font-normal  hover:text-yellow-600 hover:bg-slate-200 border-none shadow-none ${link} w-full flex `}>Productos <img src="/images/submenu2.png" class="ml-auto" alt="submenu"></div>
    <ul tabindex="0" class="dropdown-content z-[1] menu p-1 shadow bg-base-100 rounded-box w-50 ml-3">
        {tiposProductos.map((producto) => (
            <li>
              <a href={`/${producto}`} class="text-gray-400 hover:bg-slate-200 hover:text-yellow-600 px-3 py-3 rounded-lg">{producto}</a>
            </li>
          ))}
    </ul>
  </div>