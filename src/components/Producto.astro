---
// Recibe props de un componente padre o se obtiene mediante un fetch desde un archivo JSON u otro recurso
const { product } = Astro.props; // Suponiendo que estás pasando el objeto 'product' como prop
---

<div class="max-w-sm rounded overflow-hidden shadow-lg m-4 bg-teal-400">
  <img class="w-full" src={product.image} alt={product.name} />
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2 text-white">{product.name}</div>
    <p class="text-white text-base font-semibold">
      {product.description}
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <!-- Se usa una etiqueta `<a>` para redirigir a una ruta específica -->
    <a
      href={`/productos/${product.id}`} 
      class="bg-violet-800 hover:bg-violet-500 text-white font-bold py-2 px-4 rounded"
    >
      Learn More
    </a>
  </div>
</div>
